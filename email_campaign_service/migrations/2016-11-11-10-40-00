"""
Script will convert EmailCampaign body_html, body_text, and custom_html datatype from TEXT to LONGTEXT
"""

from email_campaign_service.common.models.db import db
from sqlalchemy.dialects.mysql import LONGTEXT

db.session.execute("""
                   ALTER TABLE `email_campaign`
                   MODIFY COLUMN EmailBodyHtml LONGTEXT,
                   MODIFY COLUMN EmailBodyText LONGTEXT,
                   MODIFY COLUMN CustomHtml LONGTEXT;
                   """)
