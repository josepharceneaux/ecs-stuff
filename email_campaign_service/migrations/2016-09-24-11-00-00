"""
Add EmailClientCredentials FK in email_campaign table
"""

from sqlalchemy import text
from email_campaign_service.common.models.db import db

db.session.execute(
text("ALTER TABLE `email_campaign` ADD COLUMN `EmailClientCredentialsId` INT(11) NULL,\
  ADD CONSTRAINT `email_campaign_client` FOREIGN KEY (`EmailClientCredentialsId`) REFERENCES `email_client_credentials`(`id`)"))


